<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name = "TopBarView">
        <attr name = "colorMode" format = "dimension" >
            <enum name="Light" value="0"/>
            <enum name="Dark" value="1"/>
        </attr>
        <attr name="titleText" format="string"/>
        <attr name="titleBackground" format="color"/>
        <attr name="rightText" format="string"/>
        <attr name="showBack" format="boolean"/>
        <attr name="leftIcon" format="reference"/>
        <attr name="rightIcon" format="reference"/>
        <attr name="rightBackground" format="reference"/>
        <attr name="showDivider" format="boolean"/>
    </declare-styleable>


    <!-- 自定义验证码输入框-->
    <declare-styleable name="VerificationCodeView">
        <!--输入框的数量-->
        <attr name="vcnumber" format="integer" />
        <!--输入框的宽度-->
        <attr name="vcwidth" format="dimension|reference" />
        <!--输入框之间的分割线-->
        <attr name="vcdivider_drawable" format="reference" />
        <!--输入框文字颜色-->
        <attr name="vctext_color" format="color|reference" />
        <!--输入框文字大小-->
        <attr name="vctext_size" format="dimension|reference" />
        <!--输入框获取焦点时边框-->
        <attr name="vcbg_focus" format="reference" />
        <!--输入框没有焦点时边框-->
        <attr name="vcbg_normal" format="reference" />
    </declare-styleable>
    <declare-styleable name="MultipleStatusView">
        <attr name="loadingView" format="reference"/>
        <attr name="errorView" format="reference"/>
        <attr name="emptyView" format="reference"/>
        <attr name="networkerrorView" format="reference"/>
        <attr name="contentView" format="reference"/>
    </declare-styleable>
</resources>