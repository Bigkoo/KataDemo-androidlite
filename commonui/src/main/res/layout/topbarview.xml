<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTopBarTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="@dimen/topbar_title_size" />

    <ImageView
        android:id="@+id/ivTopBarBack"
        android:onClick="onTopBarBack"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/padding_topbar_item"
        android:paddingRight="@dimen/padding_topbar_item"
        android:scaleType="centerInside"
        android:src="@drawable/ic_topbar_back_white" />

    <TextView
        android:id="@+id/tvTopBarRight"
        android:layout_width="wrap_content"
        android:onClick="onTopBarRightClick"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingLeft="@dimen/padding_topbar_item"
        android:paddingRight="@dimen/padding_topbar_item"
        android:textSize="@dimen/size_topbar_righttext" />

    <ImageView
        android:id="@+id/ivTopBarRight"
        android:onClick="onTopBarRightClick"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/padding_topbar_item"
        android:paddingRight="@dimen/padding_topbar_item"
        android:scaleType="centerInside"/>


    <View
        android:id="@+id/dividerView"
        android:layout_alignParentBottom="true"
        android:background="@color/topbar_color_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_topbar_divider"
        />
</RelativeLayout>
